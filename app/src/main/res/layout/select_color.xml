<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:parentTag="android.widget.RelativeLayout"
    tools:context=".SettingsActivity">

    <View
        android:id="@+id/topBorder"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/settingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Player 1 Color"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/topBorder"/>

    <View
        android:id="@+id/selected_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/player1Color"
        android:layout_alignEnd="@id/topBorder"
        android:layout_below="@id/topBorder"
        />

    <View
        android:id="@+id/bottomBorder"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        android:layout_below="@id/selected_color"/>

</merge>